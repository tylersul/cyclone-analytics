<% include ../partials/header %> 
<div class="bg-white">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12 text-center">
                <h1>Our Newsroom</h1>
                <p>Keep up to date with what we're working on.  Cyclone Analytics is evolving daily.</p>
                <form action="/players" method="GET" class="form-inline justify-content-center">
                    <div class="form-group mb-2">
                        <input type="text" name="search" placeholder="Search our blog..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-outline-secondary ml-2">
                    </div>
                </form>
                <% if (currentUser && currentUser.isAdmin) { %>
                    <a href="/blog/new" class="btn btn-primary">New Blog</a>
                <% } %>
            </div>
        </div>
    </div>
</div>
<div class="bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md">
                <h3>Latest Stories</h3>
                <p class="text-muted">Here's what we've been up to recently:</p>
            </div>
            <div class="col-12 col-md-auto">
                <a href="#" class="btn btn-outline-primary">View All</a>
            </div>
        </div>
        <% blogs.forEach(function(blog){ %>
        <div class="row">
            <div class="col-12 col-md-12">
                <div class="card">
                    <h1><%= blog.title %></h1>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %> 