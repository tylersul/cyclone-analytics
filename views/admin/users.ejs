<% include ../partials/header %>

<nav class="nav nav-pills flex-column flex-sm-row mb-2">
        <a class="flex-sm-fill text-sm-center nav-link" href="/admin">Account</a>
        <a class="flex-sm-fill text-sm-center nav-link active" href="#">Users</a>
        <a class="flex-sm-fill text-sm-center nav-link" href="/admin/players">Players</a>
        <a class="flex-sm-fill text-sm-center nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Permissions</a>
      </nav>
      <h2> Number of users: <%= users.length %></h2> 
<table class="table mb-4">
        <thead class="thead-light">
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Profile Page</th>
                <th scope="col">User Management</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user){ %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><a href="/users/<%= user._id %>">Profile</a></td>
                <td>
                    <form id="delete-user" action="/users/<%= user._id%>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    

<% include ../partials/footer %>